@model ShareTradingModel.Share

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Share</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">StockExchangeId</div>
    <div class="display-field">@Model.StockExchangeId</div>

    <div class="display-label">FaceValue</div>
    <div class="display-field">@String.Format("{0:F}", Model.FaceValue)</div>

    <div class="display-label">QuantityInitial</div>
    <div class="display-field">@Model.QuantityInitial</div>

    <div class="display-label">QuantityRemaining</div>
    <div class="display-field">@Model.QuantityRemaining</div>

    <div class="display-label">Company</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Company).ToString()</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


